<% layout("/layouts/boilerplate") %>
<div class="row row-form">
    <div class="col-8 offset-2">
        <h2 class="col-8 offset-5" ><b>Login</b></h2>
        <form action="/login" method="POST" novalidate class="needs-validation">
            <div class="md-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control" required>
            </div>
            <div class="md-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control" required>
            </div>
            <button class="btn btn-dark add-btn login-btn">Login</button>
        </form>
    </div>
</div>
