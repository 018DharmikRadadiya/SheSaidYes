<% layout("/layouts/boilerplate") %>
<div class="row row-form">
    <div class="col-8 offset-2">
        <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="md-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" name="listing[title]" placeholder="Ex-Villa da Resort" class="form-control" required>
                <div class="valid-feedback">Title Looks Good!</div>
            </div>
            
            <div class="md-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" class="form-control" required></textarea>
                <div class="invalid-feedback">Enter short Description</div>
            </div>

            <div class="row mt-2">
                <div class="md-3 col-md-6">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" id="image" name="listing[image]"  class="form-control" required>
                </div>
                <div class="md-3 col-md-6">
                    <label for="categorySelect" class="form-label fw-bold">Category</label>
                    <select class="form-select" id="categorySelect" name="listing[category]" aria-label="Category select">
                      <option selected disabled>Choose a category</option>
                      <option value="pools" id="pools">Pools</option>
                      <option value="beachfront" id="beachfront">Beachfront</option>
                      <option value="cities" id="cities">Cities</option>
                      <option value="mountains" id="mountains">Mountains</option>
                      <option value="beds" id="beds">Beds</option>
                      <option value="hotels" id="hotels">Hotels</option>
                      <option value="mansions" id="mansions">Mansions</option>
                      <option value="treehouse" id="treehouse">Treehouse</option>
                      <option value="boats" id="boats">Boats</option>
                      <option value="domes" id="domes">Domes</option>
                      <option value="others" id="others">Others...</option>
                    </select>
                </div>
            </div>
            
            <div class="row mt-2">
                <div class="md-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" id="price" name="listing[price]" placeholder="Ex-3500" class="form-control" required>
                    <div class="invalid-feedback">Enter Valid Price</div>
                </div>
                
                <div class="md-3 col-md-8">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="listing[location]" placeholder="Ex-Jaipur, Rajasthan" class="form-control" required>
                    <div class="invalid-feedback">Enter Valid Location</div>
                </div>
            </div>
            
            <div class="md-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" id="country" name="listing[country]" placeholder="Ex-India" class="form-control" required>
                <div class="invalid-feedback">Enter Valid Country</div>
            </div>
            <button class="btn btn-dark add-btn">Add New</button>
        </form>
    </div>
</div>
